require 'rubygems'
require 'choice'
require 'fileutils'
$:.unshift File.dirname(__FILE__) + '/../../lib'

require 'ganglia'

Choice.options do
  header ''
  header 'Specific options:'

  option :ntp_server, :required => true do
    short '-s'
    long '--ntp-server=NTP-SERVER'
    desc 'The ntp server to compare against'
  end

  option :help do
    long '--help'
    desc 'Show this message'
  end

end

choices=Choice.choices
ntp_server = choices[:ntp_server]
output = `ntpdate -d #{ntp_server} |grep "time server"`
ntp_offset_metric_value = output.split(/\s+/)[-2]
Ganglia.gmetric(
    :name =>"ntp_offset",
    :value => ntp_offset_metric_value,
    :units => 'seconds',
    :type => 'float'
                  )
